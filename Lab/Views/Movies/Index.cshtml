@model List<Lab.Domain.DomainModels.Movie>


@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <a class="btn btn-success" asp-action="Create">Insert New Movie</a>
    </div>
    
       @for (int i = 0; i < Model.Count; i++)
       {
           var item = Model[i];

           if(i % 3 == 0)
           {
               @:<div class="row">
           }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.MovieImage" style="height: 50%;" alt="Image for product!">

                <div class="card-body">
                    <h3 class="card-title">@item.MovieTitle</h3>
                    <p class="card-text">@item.MovieDescription</p>
                    <p class="card-text">@item.DateAndTime</p>
                    
                    <h6>Price: $@item.MoviePrice</h6>
                </div>

                <div class="card-footer">
                   <!-- <a asp-controller="Movies" asp-action="AddProductToCard" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>-->
                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a href="/Movies/AddToCart?movieId=@item.Id&cartId=1">Add to cart</a>
                </div>
            </div>
        </div>


           if(i % 3 == 2)
           {
               @:</div>
           }
       }
</div>