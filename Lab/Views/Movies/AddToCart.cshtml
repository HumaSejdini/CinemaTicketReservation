<h1>Add selected product to shopping cart</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToShoppingCart">
            <input type="hidden" asp-for="MovieId" />
            <div class="form-group">
                <input disabled class="form-control" asp-for="SelectedMovie.MovieTitle" />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" asp-for="Quantity" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>

